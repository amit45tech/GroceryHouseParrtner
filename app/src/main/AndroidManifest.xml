<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sarkstechsolution.ghstorepartner">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GHStorePartner">
        <activity android:name=".AllProductsActivity"></activity>
        <activity android:name=".PreviousSaleActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".TodaySalesActivity" />
        <activity android:name=".ProductAvailabilityStatusActivity" />
        <activity android:name=".OutOfStockActivity" />
        <activity android:name=".ManageProductActivity" />
        <activity android:name=".AddProductActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.AppCompat" />
    </application>

</manifest>